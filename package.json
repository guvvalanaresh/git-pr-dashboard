{
  "name": "git-pr-dashboard-server",
  "version": "1.0.0",
  "description": "Express backend for GitHub PR Dashboard",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon index.js",
    "start": "node index.js",
    "build": "echo 'No build step required for Node.js'",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "cors": "^2.8.5",
    "express-session": "^1.18.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.0",
    "@jest/globals": "^30.2.0",
    "@types/jest": "^29.5.8",
    "babel-jest": "^29.7.0",
    "express-session": "^1.18.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "passport-mock": "^0.0.3",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ]
  }
}
